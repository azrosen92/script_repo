<h1>Listing scripts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>File path</th>
      <th>Size</th>
      <th>Downloads</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.name %></td>
        <td><%= script.file_path %></td>
        <td><%= script.size %></td>
        <td><%= script.downloads %></td>
        <td><%= link_to 'Show', script %></td>
        <td><%= link_to 'Edit', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script', new_script_path %>
